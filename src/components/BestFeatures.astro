---
import { Image } from "@astrojs/image/components";
import ListBuilding from "../assets/img/list-building-schema.jpeg";
import EvergreenCampaign from "../assets/img/evergreen-campaign.jpeg";
import DripsenderBot from "../assets/img/Dripsender-Bot.jpg";
import RewardListBuilding from "../assets/img/Reward-List-Building.jpg";
import DiagramPOS from "../assets/img/crm.drawio.png";
---

<!-- @ts-ignore -->
<div
  x-data=`{
    tab: null,
    tabs: [],
    scrolledLeft: true,
    scrolledRight: false,
    init() {
         
        this.tab = 'list-building'
       console.log(this.tab)
        this.updateScrollPosition()
    },
    changeTab(tab) {
        if (this.tabs.includes(tab)) {
            this.tab = tab
            history.replaceState(null, null, '#' + tab)
        }
    },
    scrollLeft() {
        document.getElementById('feature-nav').scrollBy({ left: -200, behavior: 'smooth' })
    },
    scrollRight() {
        document.getElementById('feature-nav').scrollBy({ left: 200, behavior: 'smooth' })
    },
    updateScrollPosition(event) {
        const el = document.getElementById('feature-nav')
        this.scrolledLeft = el.scrollLeft === 0
        this.scrolledRight = (el.scrollWidth - el.offsetWidth) === el.scrollLeft
    }
}`
  class="relative overflow-hidden py-16 md:pt-48 dark:bg-gray-900"
  
>
  <span
    class="hidden absolute bg-radial-gradient opacity-[.15] pointer-events-none lg:inline-flex right-[-20%] top-0 w-[640px] h-[640px]"
  ></span>
  <div class="relative max-w-screen-xl w-full mx-auto px-5">
    <h2 class="text-4xl font-bold max-w-lg md:text-5xl dark:text-white">
      Everything you need to be amazing.
    </h2>
    <p class="mt-6 text-gray-700 leading-relaxed max-w-3xl dark:text-gray-300">
      Out of the box, Dripsender memiliki semua Fitur untuk kebutuhan Whatsapp
      Marketing. Mulai dari List Building, Evergreen Campaign, Broadcast
      Campaign with AI, Automation with BOT, Chat GPT Assistant, CRM, hingga Online POS.
    </p>

    <div
      class="z-10 relative lg:h-[550px] max-w-[1100px] mt-12 flex flex-col lg:flex-row bg-white border border-gray-200 overflow-hidden"
    >
      <nav class="w-full flex relative lg:max-w-xs">
        <div
          class="hidden lg:block pointer-events-none absolute top-0 w-5 lg:w-full h-full lg:h-8 bg-gradient-to-r lg:bg-gradient-to-b from-white"
        >
        </div>
        <div
          class="hidden lg:block pointer-events-none absolute bottom-0 right-0 z-10 w-5 lg:w-full h-full lg:h-6 bg-gradient-to-l lg:bg-gradient-to-t from-white"
        >
        </div>

        <button
          class="lg:hidden w-6 bg-gray-50 border-r border-b border-gray-100 text-gray-600 disabled:text-gray-200 flex items-center justify-center"
          :disabled="scrolledLeft"
          @click="scrollLeft"
          disabled="disabled"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            class="w-5 h-5"
          >
            <path
              fill-rule="evenodd"
              d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z"
              clip-rule="evenodd"></path>
          </svg>
        </button>

        <ul
          id="feature-nav"
          class="flex-1 divide-x lg:divide-x-0 lg:divide-y divide-gray-100 max-h-full overflow-x-auto lg:overflow-x-visible lg:overflow-y-auto lg:overscroll-y-contain flex lg:block whitespace-nowrap text-sm lg:text-base"
          @scroll.throttle.50ms="updateScrollPosition"
        >
          <li>
            <a
              href="#list-building"
              class="text-left p-4 lg:py-6 flex items-center gap-3 bg-white text-gray-800"
              :class="tab === 'list-building' ? 'bg-white text-gray-800' : 'border-b lg:border-b-0 lg:border-r border-gray-100 bg-gray-50 text-gray-700 hover:bg-white'"
