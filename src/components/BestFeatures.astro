              :class="tab === 'campaign-with-ai' ? 'bg-white text-gray-800' : 'border-b lg:border-b-0 lg:border-r border-gray-100 bg-gray-50 text-gray-700 hover:bg-white'"
              @click.prevent="changeTab('campaign-with-ai')"
            >
              
