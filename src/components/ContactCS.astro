<!-- This example requires Tailwind CSS v2.0+ -->
<div
  class="bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700"
>
  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 md:py-16 lg:px-8 lg:py-20">
    <h2
      class="font-extrabold tracking-tight dark:text-gray-100 text-gray-900 sm:text-4xl"
    >
      <span class="block">Tertarik Mencoba Dripsender?</span>
      <span class="block mt-1 text-cyan-500">DAPATKAN FREE TRIAL SEKARANG.</span
      >
    </h2>
    <div class="mt-8 flex">
      <div class="inline-flex rounded-md shadow">
        <a
          id="register-dripsender"
          href="https://portal.dripsender.id/register"
          class="inline-flex no-underline items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-cyan-500 hover:bg-cyan-700"
        >
          DAFTAR GRATIS
        </a>
      </div>
      <div class="ml-3 inline-flex">
        <a
          id="kontak-cs"
          target="_blank"
          href="https://wa.me/6285609310304?text=Halo+Kak+Fey"
          class="inline-flex no-underline items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-cyan-700 bg-cyan-100 hover:bg-cyan-200"
        >
          KONTAK CS
        </a>
      </div>
    </div>
  </div>
</div>

<script>
  // Processed! Bundled! TypeScript-supported!
  // Importing local scripts and Node modules works.

  const register = document.querySelector("#register-dripsender");

  if (register) {
    register.addEventListener("click", () => {
      // @ts-ignore:next-line
      fbq("track", "Lead", {
        content_name: document.title,
      });

      // @ts-ignore:next-line
      fbq("track", "StartTrial");
    });
  }

  const contact = document.querySelector("#kontak-cs");

  if (contact) {
    contact.addEventListener("click", () => {
      // @ts-ignore:next-line
      fbq("track", "Lead", {
        content_name: document.title,
      });
      // @ts-ignore:next-line
      fbq("track", "Contact");
    });
  }
</script>
